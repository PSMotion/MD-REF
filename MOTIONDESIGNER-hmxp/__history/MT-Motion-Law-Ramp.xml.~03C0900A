                  <li styleclass="HowTo Bulleted"><text styleclass="Parameter-Header" translate="true">Start-Fraction </text><text styleclass="Parameter-Header" style="font-size:14pt;" translate="true">=</text><text styleclass="Parameter-Header" translate="true"> 0.7</text></li>
                  <li styleclass="HowTo Bulleted"><text styleclass="Parameter-Header" translate="true">End-Fraction </text><text styleclass="Parameter-Header" style="font-size:14pt;" translate="true">=</text><text styleclass="Parameter-Header" translate="true"> 0.3</text></li>
