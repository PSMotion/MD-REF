          <para styleclass="Body Text"><text styleclass="Parameter" translate="true">Segment-Start</text><text styleclass="Body Text" translate="true"> (read-only) </text><text styleclass="BodyText Bold" translate="true">:</text><text styleclass="Body Text" translate="true"> The </text><text styleclass="VariableName" translate="true">X-axis</text><text styleclass="Body Text" translate="true"> value at the </text><text styleclass="Interface2" translate="true">start</text><text styleclass="Body Text" translate="true"> of the </text><text styleclass="Element" translate="true">Selected-Segment</text><text styleclass="Body Text" translate="true">&#32;</text></para>
          <para styleclass="Body Text HowTo"><text styleclass="Parameter-Header" translate="true">SEGMENT-WIDTH</text><text styleclass="Body Text HowTo" translate="true">&#32;</text><text styleclass="Body Text" translate="true">(read-write)</text><text styleclass="Body Text HowTo" translate="true"> : Enter the width of the </text><text styleclass="Element" translate="true">Selected-Segment</text><text styleclass="Body Text" translate="true">. Use </text><link displaytype="text" defaultstyle="true" type="topiclink" href="" anchor="XaxisUnits" styleclass="VariableName" translate="true">X-axis Units</link><text styleclass="VariableName" translate="true">.</text></para>
          <para styleclass="Body Text"><text styleclass="Parameter" translate="true">Segment-End</text><text styleclass="Body Text" translate="true"> (read-only) </text><text styleclass="BodyText Bold" translate="true">:</text><text styleclass="Body Text" translate="true"> The </text><text styleclass="VariableName" translate="true">X-axis</text><text styleclass="Body Text" translate="true"> value at the </text><text styleclass="Interface2" translate="true">end</text><text styleclass="Body Text" translate="true"> of the </text><text styleclass="Element" translate="true">Selected-Segment.</text></para>
