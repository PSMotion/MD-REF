                <list id="1" type="ul" listtype="bullet" formatstring="&#183;" format-charset="SYMBOL_CHARSET" levelreset="true" legalstyle="false" startfrom="1" styleclass="Bullets" style="font-family:Symbol; font-size:11pt; color:#000000;">
                  <li styleclass="Bullets"><text styleclass="Parameter" translate="true">Start-Range = 0.2</text><text styleclass="Bullets" translate="true">&#32;</text><text styleclass="Body Text" translate="true">- to remove </text><text styleclass="Interface2" translate="true">20%</text><text styleclass="Body Text" translate="true"> from the start of the </text><text styleclass="Interface2" translate="true">Modified-Sinusoid</text><text styleclass="Body Text" translate="true"> mathematical function</text></li>
                  <li styleclass="HowTo Bulleted"><text styleclass="Parameter" translate="true">End-Range = 1.0</text></li>
                </list>
              </td>
