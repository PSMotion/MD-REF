          <list id="3" type="ul" listtype="bullet" formatstring="&#183;" format-charset="SYMBOL_CHARSET" levelreset="true" legalstyle="false" startfrom="1" styleclass="HowTo Bulleted" style="font-family:Symbol; font-size:11pt; color:#333399;">
            <li styleclass="HowTo Bulleted"><text styleclass="Parameter-Header" translate="true">Start-Range = 0.0</text></li>
            <li styleclass="HowTo Bulleted"><text styleclass="Parameter-Header" translate="true">End-Range = 0.8</text><text styleclass="Body Text" translate="true"> - to remove 80 - 100% of the </text><text styleclass="Interface2" translate="true">Modified-Sinusoid</text><text styleclass="Body Text" translate="true"> function.</text></li>
          </list>
